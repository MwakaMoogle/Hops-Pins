{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/assets/*": ["./assets/*"],
      "@/types/*": ["./types/*"],
      "@/data/*": ["./data/*"],
      "@/contexts/*": ["./contexts/*"],
      // Add this for Firebase v10+ React Native types
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "lib/**/*",
    "hooks/**/*",
    "data/**/*",
    "contexts/**/*",
    "app/**/*"
  ]
}